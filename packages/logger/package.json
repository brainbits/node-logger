{
    "name": "@tspm/node-logger",
    "version": "2.2.4",
    "description": "Logger for node projects",
    "main": "dist/index.js",
    "types": "src/types.d.ts",
    "scripts": {
        "build": "babel ./src --out-dir ./dist --ignore test.js,setupTests.js,__mocks__/*",
        "build:watch": "npm run build -- --watch --source-maps",
        "lint": "eslint ./src",
        "coverage": "npm test -- --coverage",
        "test": "jest",
        "test:watch": "npm test -- --watch"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ]
        ],
        "plugins": [
            "@babel/plugin-proposal-class-properties",
            "@babel/plugin-proposal-export-default-from"
        ]
    },
    "eslintConfig": {
        "parser": "@babel/eslint-parser",
        "extends": [
            "brainbits",
            "brainbits-jest"
        ],
        "env": {
            "node": true,
            "jest": true
        }
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.js"
        ],
        "coverageDirectory": "coverage",
        "roots": [
            "<rootDir>/src/"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git@gitlab.brainbits.net:tspm/node-logger.git"
    },
    "keywords": [
        "logger",
        "winston",
        "monolog"
    ],
    "author": "Brainbits <moriarty@brainbits.net>",
    "license": "MIT",
    "dependencies": {
        "deepmerge": "^4.2.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.16.0",
        "@babel/eslint-parser": "^7.16.3",
        "@babel/plugin-proposal-class-properties": "^7.16.0",
        "@babel/plugin-proposal-export-default-from": "^7.16.0",
        "@babel/preset-env": "^7.16.4",
        "eslint": "^8.3.0",
        "eslint-config-brainbits": "^3.0.9",
        "eslint-config-brainbits-jest": "^3.0.9",
        "eslint-plugin-babel": "^5.3.1",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-jest": "^25.3.0",
        "eslint-plugin-promise": "^5.1.1",
        "jest": "^27.3.1"
    }
}
