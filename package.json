{
    "name": "@tspm/node-logger",
    "version": "1.0.3",
    "description": "Logger for node projects",
    "publishConfig": {
        "registry": "http://npm.int-vm-rancher-host2.brainbits-gmbh.local"
    },
    "main": "dist/index.js",
    "scripts": {
        "build:watch": "npm run build -- --watch --source-maps",
        "build": "babel src --out-dir ./dist --ignore test.js,setupTests.js,__mocks__/*",
        "lint": "eslint ./src",
        "coverage": "npm test -- --coverage",
        "test:watch": "npm test -- --watch",
        "test": "jest"
    },
    "babel": {
        "presets": [
            [
                "env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ]
        ],
        "plugins": [
            "transform-object-rest-spread"
        ]
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "extends": [
            "brainbits",
            "brainbits-jest"
        ],
        "env": {
            "node": true,
            "jest": true
        }
    },
    "jest": {
        "setupFiles": [
            "./src/setupTests.js"
        ],
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.js"
        ],
        "coverageDirectory": "coverage",
        "transform": {
            "^.+\\.js$": "babel-jest"
        },
        "roots": [
            "<rootDir>/src/"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git@gitlab.brainbits.net:tspm/node-logger.git"
    },
    "keywords": [
        "logger",
        "winston",
        "monolog"
    ],
    "author": "Brainbits <moriarty@brainbits.net>",
    "license": "MIT",
    "dependencies": {
        "date-fns": "^1.30.1",
        "jest-get-type": "^24.3.0"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.3",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^24.5.0",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "eslint": "^5.15.1",
        "eslint-config-brainbits": "^1.0.0",
        "eslint-config-brainbits-jest": "^1.0.0",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-jest": "^22.3.2",
        "jest": "^24.5.0"
    }
}
